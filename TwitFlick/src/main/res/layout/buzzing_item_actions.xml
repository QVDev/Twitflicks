<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:orientation="vertical">


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/playTrailerButton"
            android:src="@android:drawable/ic_media_play"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>


    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweetLikeButton"
            android:src="@android:drawable/ic_menu_day"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/playTrailerButton"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tweetHateButton"
            android:src="@android:drawable/ic_menu_more"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tweetLikeButton"/>

    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemInformation"
            android:src="@android:drawable/ic_menu_info_details"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/tweetHateButton"/>

</RelativeLayout>
